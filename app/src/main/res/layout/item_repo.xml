<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="@color/azul"
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de Repositorio" />

            <TextView

               android:paddingStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:textColor="@color/negro"
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Descripcion\n Descripcion" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:drawableLeft="@drawable/ico_fork"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textColor="@color/amarillo"
                    android:id="@+id/forks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 forks" />
                <TextView
                    android:drawableLeft="@drawable/ico_stars"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textColor="@color/amarillo"
                    android:id="@+id/estrellas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="0 stargazers" />



            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

        <TextView
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/azul"
            android:id="@+id/nombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre" />

        <TextView
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/lavanda"
            android:id="@+id/sobrenombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobrenombre" />
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lavanda"
        android:layout_marginTop="10dp"
        />

</LinearLayout>